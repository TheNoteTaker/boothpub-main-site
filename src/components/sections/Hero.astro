---
import { ButtonLink } from "@/components/ui/button-link";
import { Icon } from '@/components/ui/Icon';
import { Image } from 'astro:assets';
import { PhotoStripContainer } from '../PhotoStripContainer';
import { FilmStrip } from '../FilmStrip';
import { createResponsiveImage } from '@/utils/images';

const heroImageData = {
  src: "https://images.unsplash.com/photo-1532635241-17e820acc59f",
  alt: "Photo booth event with people enjoying themselves at a wedding celebration",
  width: 2400,
  height: 1600,
  format: 'webp' as const,
  quality: 85,
  sizes: "(min-width: 1920px) 1920px, 100vw",
  breakpoints: [640, 768, 1024, 1280, 1536, 1920]
};

const { images, sizes } = await createResponsiveImage(heroImageData);
---

<section class="relative overflow-hidden min-h-[calc(100vh+160px)] flex items-center justify-center pt-20">
  <!-- Background gradient layer -->
  <div class="absolute inset-0 bg-gradient-to-t from-[#D75E1F] to-[#2F505F] -z-20"></div>
  
  <!-- Background image layer -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute inset-0 bg-gradient-to-b from-transparent to-black mix-blend-multiply"></div>
    <Image
      src={images[images.length - 1].src}
      alt={heroImageData.alt}
      width={heroImageData.width}
      height={heroImageData.height}
      class="object-cover w-full h-full"
      loading="eager"
      fetchpriority="high"
      decoding="sync"
      srcset={images.map(img => `${img.src} ${img.attributes.width}w`).join(', ')}
      sizes={sizes}
    />
    <div class="absolute inset-0 bg-gradient-to-b from-transparent to-black/100"></div>
  </div>
  
  <!-- Floating photo strips layer -->
  <div class="absolute inset-0 -z-5">
    <div class="hero-container relative w-full h-[calc(100vh-200px)] max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <PhotoStripContainer client:load />
    </div>
  </div>

  <!-- Content layer -->
  <div class="relative z-10 mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 pointer-events-none pt-12 sm:pt-16 md:pt-20 pb-64">
    <div class="max-w-3xl md:mx-auto md:text-center">
      <div class="flex justify-center mb-6 sm:mb-8">
        <div class="relative animate-float pointer-events-auto group">
          <Icon name="Camera" className="w-10 h-10 sm:w-12 sm:h-12 text-[#D75E1F]" client:load />
          <Icon name="Sparkles" className="absolute -top-2 -right-2 w-5 h-5 sm:w-6 sm:h-6 text-[#F9CC9A] animate-pulse group-hover:scale-125 transition-transform" client:load />
        </div>
      </div>
      <h1 class="font-display text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold tracking-tight text-white animate-slide-up">
        Make Your Event Unforgettable with Booth Pub
      </h1>
      <p class="mt-6 sm:mt-8 text-lg sm:text-xl tracking-tight text-gray-200 animate-fade-in">
        Create lasting memories with our premium photo booth experience, complete with optional bartending services.
      </p>
      <div class="mt-10 sm:mt-12 flex flex-col sm:flex-row justify-center gap-4 sm:gap-x-6">
        <ButtonLink
          href="#quote"
          variant="default"
          size="lg"
          className="bg-[#D75E1F] hover:bg-[#c24f15] w-full sm:w-auto transition-all duration-300 hover:scale-105 hover:shadow-lg pointer-events-auto"
        >
          Get a Free Quote
        </ButtonLink>
        <ButtonLink
          href="#packages"
          variant="outline"
          size="lg"
          className="border-white/20 bg-white/5 text-white w-full sm:w-auto transition-all duration-300 hover:scale-105 hover:shadow-lg hover:bg-white/10 hover:border-white hover:text-white pointer-events-auto"
        >
          View Packages
        </ButtonLink>
      </div>
    </div>
  </div>
  
  <!-- Bottom film strip layer -->
  <div class="absolute bottom-0 left-0 right-0 z-20">
    <FilmStrip client:load />
  </div>
</section>

<style>
  .hero-container {
    position: relative;
    overflow: hidden;
  }

  @keyframes flash {
    0%, 100% { opacity: 0; }
    50% { opacity: 1; }
  }

  .animate-flash {
    animation: flash 0.3s ease-out forwards;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }

  @keyframes slideUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .animate-slide-up {
    animation: slideUp 0.8s ease-out forwards;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .animate-fade-in {
    animation: fadeIn 1s ease-out forwards;
    animation-delay: 0.3s;
    opacity: 0;
  }
</style>