---
import { ButtonLink } from "@/components/ui/button-link";
import { Icon } from '@/components/ui/Icon';
import { Image } from 'astro:assets';
import { PhotoStrip } from '../PhotoStrip';
import { PhotoStripCarousel } from '../PhotoStripCarousel';
---

<section class="relative overflow-hidden min-h-screen flex items-center justify-center">
  <!-- Background image layer -->
  <div class="absolute inset-0 -z-10">
    <Image
      src="https://images.unsplash.com/photo-1492684223066-81342ee5ff30?auto=format&fit=crop&q=80"
      alt="Background Pattern"
      width={1920}
      height={1080}
      class="object-cover w-full h-full opacity-[0.15]"
    />
    <div class="absolute inset-0 bg-gradient-to-b from-white via-white/95 to-white/90"></div>
  </div>
  
  <!-- Floating photo strips layer -->
  <div class="absolute inset-0">
    <div class="hero-container relative w-full h-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      {Array.from({ length: 8 }).map((_, i) => (
        <PhotoStrip client:load index={i} />
      ))}
    </div>
  </div>

  <!-- Content layer -->
  <div class="relative z-10 mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 pointer-events-none py-16 sm:py-20">
    <div class="max-w-3xl md:mx-auto md:text-center">
      <div class="flex justify-center mb-6 sm:mb-8">
        <div class="relative animate-float pointer-events-auto group">
          <Icon name="Camera" className="w-10 h-10 sm:w-12 sm:h-12 text-[#D75E1F]" client:load />
          <Icon name="Sparkles" className="absolute -top-2 -right-2 w-5 h-5 sm:w-6 sm:h-6 text-[#F9CC9A] animate-pulse group-hover:scale-125 transition-transform" client:load />
        </div>
      </div>
      <h1 class="font-display text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold tracking-tight text-[#2F505F] animate-slide-up">
        Make Your Event Unforgettable with Booth Pub
      </h1>
      <p class="mt-6 sm:mt-8 text-lg sm:text-xl tracking-tight text-muted-foreground animate-fade-in">
        Create lasting memories with our premium photo booth experience, complete with optional bartending services.
      </p>
      <div class="mt-10 sm:mt-12 flex flex-col sm:flex-row justify-center gap-4 sm:gap-x-6">
        <ButtonLink
          href="#quote"
          variant="default"
          size="lg"
          className="bg-[#D75E1F] hover:bg-[#c24f15] w-full sm:w-auto transition-all duration-300 hover:scale-105 hover:shadow-lg pointer-events-auto"
        >
          Get a Free Quote
        </ButtonLink>
        <ButtonLink
          href="#packages"
          variant="outline"
          size="lg"
          className="border-[#2F505F] text-[#2F505F] w-full sm:w-auto transition-all duration-300 hover:scale-105 hover:shadow-lg hover:bg-[#2F505F] hover:text-white pointer-events-auto"
        >
          View Packages
        </ButtonLink>
      </div>
    </div>
  </div>
  
  <!-- Bottom carousel layer -->
  <PhotoStripCarousel client:load />
</section>

<style>
  .hero-container {
    position: relative;
    overflow: hidden;
  }
</style>