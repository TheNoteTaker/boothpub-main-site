---
import { ButtonLink } from "@/components/ui/button-link";
import { Icon } from '@/components/ui/Icon';
import { PhotoStrip } from '../PhotoStrip';
---

<section class="relative overflow-hidden min-h-screen flex items-center justify-center py-12 sm:py-20">
  <div class="absolute inset-0 -z-10">
    <img
      src="https://images.unsplash.com/photo-1492684223066-81342ee5ff30?auto=format&fit=crop&q=80"
      alt="Background"
      class="object-cover w-full h-full opacity-20"
    />
    <div class="absolute inset-0 bg-gradient-to-b from-white via-transparent to-white"></div>
  </div>
  
  {Array.from({ length: 5 }).map((_, i) => (
    <PhotoStrip client:load index={i} />
  ))}

  <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="max-w-2xl md:mx-auto md:text-center xl:max-w-none">
      <div class="flex justify-center mb-6 sm:mb-8">
        <div class="relative">
          <Icon name="Camera" className="w-10 h-10 sm:w-12 sm:h-12 text-[#D75E1F]" client:load />
          <Icon name="Sparkles" className="absolute -top-2 -right-2 w-5 h-5 sm:w-6 sm:h-6 text-[#F9CC9A]" client:load />
        </div>
      </div>
      <h1 class="font-display text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-medium tracking-tight text-[#2F505F]">
        Make Your Event Unforgettable with Booth Pub
      </h1>
      <p class="mt-4 sm:mt-6 text-base sm:text-lg tracking-tight text-muted-foreground">
        Photobooth + optional bartending to elevate any party.
      </p>
      <div class="mt-8 sm:mt-10 flex flex-col sm:flex-row justify-center gap-4 sm:gap-x-6">
        <ButtonLink
          href="#quote"
          variant="default"
          size="lg"
          className="bg-[#D75E1F] hover:bg-[#c24f15] w-full sm:w-auto transition-transform hover:scale-105"
        >
          Get a Free Quote
        </ButtonLink>
        <ButtonLink
          href="#packages"
          variant="outline"
          size="lg"
          className="border-[#2F505F] text-[#2F505F] w-full sm:w-auto transition-transform hover:scale-105"
        >
          View Packages
        </ButtonLink>
      </div>
    </div>
    <div class="mt-8 sm:mt-16">
      <img
        class="rounded-xl shadow-xl ring-1 ring-gray-400/10 w-full transition-transform hover:scale-[1.02] duration-500"
        src="https://images.unsplash.com/photo-1527529482837-4698179dc6ce?auto=format&fit=crop&q=80"
        alt="Friends having fun in a photobooth"
      />
    </div>
  </div>
</section>